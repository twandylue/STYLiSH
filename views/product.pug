        input#wash(type='text' name='wash')
      br
      label
        | Please enter your place: 
        input#place(type='text' name='place')
      br
      label
        | Please enter your note: 
        input#note(type='text' name='note')
      br
      label
        | Please enter your story: 
        input#story(type='text' name='story')
      br
